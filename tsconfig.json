{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",

    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,

    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
